@{
    ViewData["Title"] = "Dashboard";
}
@using ta2jir.Controllers;
@using ta2jir.Models;
@model ta2jir.Models.User;
<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: linear-gradient(to top, #d5d4d0 0%, #d5d4d0 1%, #eeeeec 31%, #efeeec 75%, #e9e9e7 100%);
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        }

        .profile-pic {
            width: 200px;
            height: 200px;
            border-radius: 90%;
            object-fit: cover;
            margin-bottom: 20px;
            margin-right: 30px
        }

        h1 {
            margin: 0;
        }
    </style>
</head>

<body>
    <h1 style="padding-bottom:10px;"><strong>Dashboard</strong></h1>
    <div class="container">
        <h2 style="margin:0;padding-left:5px;">Profile</h2>
        <hr />
        <div style="padding-top:20px;">
            @if (Model.ProfilePic != null)
            {
                <img src="@Model.ProfilePic" alt="Profile Picture" class="profile-pic" style="float:left;" align="left" />
            }
            else
            {
                <img src="@UserController.ProfilePicture()" alt="Profile Picture" class="profile-pic" style="float:left;" align="left" />
            }
            <div class="text" align="left" style="text-align:left;">
                <h1>@Model.Name</h1>
                <br />
                <p>Email: @Model.Email</p>
                @if (Model.Birthdate != null)
                {
                    <p>Birthdate: @ViewData["birthdate"] </p>
                }
                else
                {
                    <p style="font:Sans Serif">Birthdate: not given</p>
                }
                <p>Customer since: @Model.DateJoined.ToString("dd.MM.yyyy")</p>
                <a class="btn btn-success" type="button" asp-action="EditProfile" asp-controller="User" asp-route-userId="@LoginController.GetCurrentUser().UserId">Edit Profile</a>
            </div>
        </div>
    </div>
</body>
</html>